{
  "name": "bear-blog-replacement-template",
  "description": "A Markdown blog template in Next.js designed to be a self-hosted replacement to Bear Blog that's easy to setup and supports LaTeX with KaTeX and code highlighting.  ",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@4.1.0",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "dependencies": {
    "gray-matter": "4.0.3",
    "highlight.js": "11.9.0",
    "markdown-it": "14.0.0",
    "markdown-it-footnote": "4.0.0",
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "20.11.17",
    "@types/react": "18.2.55",
    "@types/react-dom": "18.2.19",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "7.0.1",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
